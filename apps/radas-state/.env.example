# Example .env file for Radas State Application
# Rename this file to ".env" and adjust values as needed

# Database configuration
DATABASE_URL=ecto://postgres:postgres@localhost/radas_state_dev
DB_POOL_SIZE=10

# Phoenix server configuration
PHX_HOST=localhost
PORT=4000
SECRET_KEY_BASE=YOUR_SECRET_KEY_BASE

# Email (Swoosh) configuration
EMAIL_FROM=no-reply@example.com
EMAIL_ADAPTER=Swoosh.Adapters.Local

# Oban/Background jobs
OBAN_REPO=RadasState.Repo
OBAN_QUEUE_DEFAULT=true

# Auth tokens (for development/demo)
ADMIN_TOKEN=admin-token
USER_TOKEN=user-token

# Other environment variables can be added as needed
